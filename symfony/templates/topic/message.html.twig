<h1>{{ messages[0].topic.name }}</h1>

{% if messages|length == 0 %}
    AUCUN message
{% else %}
    {% for message in messagesInPage %}
    <div class="row">
        <div class="col-md-2"></div>
            <div class="col-md-8 card mb-3">
                <div class="card-header "><u class="name"></u></div>
                <div class="card-body text-light">
                    <h5 class="card-title">{{ message.utilisateur.pseudo }}</h5>
                    {{ message.content }}
                    <u class="name">{{ message.date|date("d/m/Y") }}</u>
                </div>
                <div class="card-footer "></div>
            </div>
        <div class="col-md-2"></div>
    </div>
    {% endfor %}
{% endif %}

{{ form_start(formMessage) }}
    <div class="row">
        <div class="col-md-2"></div>
            <div class="col-md-8 card mb-3">
                <div class="card-header "><u class="name">Re: {{ messages[0].topic.name }}</u></div>
                <div class="card-body text-light">
                    <h5 class="card-title">REPONDRE</h5>
                    {{ form_widget(formMessage.content) }}
                    <u class="name">{{ form_widget(formMessage.date) }}</u>
                </div>
                <div class="card-footer ">{{ form_widget(formMessage.Envoyer) }}</div>
            </div>
        <div class="col-md-2"></div>
    </div>
{{ form_end(formMessage) }}

<nav aria-label="Page navigation example">
    <ul class="pagination">
        <li class="page-item">
            <a class="page-link" href="#" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
            </a>
        </li>
        {% if messages|length == 0 %}
            <li class="page-item"><a class="page-link" href="#">1</a></li>
        {% else %}
            {% set page = 1 %}
            {% set i = 0 %}
            {% for message in messages %}
                {% set i = i + 1 %}
                {% if i is divisible by(5) %}
                    <li class="page-item"><a class="page-link" href="{{ path('topic', { 'topic': messages[0].topic.id, 'page': page }) }}">{{ page }}</a></li>
                    {% set page = page + 1 %}
                {% endif %}
            {% endfor %}
        {% endif %}
        <li class="page-item">
            <a class="page-link" href="#" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
            </a>
        </li>
    </ul>
</nav>