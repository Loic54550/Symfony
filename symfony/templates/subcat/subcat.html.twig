{% extends "base.html.twig" %}

{% block content %}
    <hr class="my-4">
    <div class="row">
        <div class="col-md-3"></div>
            <div class="col-md-6 text-center">  
                <a data-toggle="modal" class=" mr-sm-2 btn btn-outline-primary mainButton" data-target="#exampleModal6">Cr√©er Votre Topic</a>  
            </div>
        <div class="col-md-3"></div>
    </div>
    <hr class="my-4">
    <div class="row">
        <div class="col-md-2"></div>
            <div class="col-md-8">
                <table class="table">
                    <thead class="thead">
                        <tr>
                            <th><u>{{ subcat.name }}</u></th>
                            <th>Dernier messsage</th>
                        </tr>
                    </thead>
                        {% if subcat|length == 0 %}
                        <tr>
                            <td>Aucun message</td>
                            <td></td>
                        </tr>
                        {% else %}
                            {% for topic in subcat.topics %}
                                <tr>
                                    <td><a href="{{ path('topic', { 'topic': topic.id, 'page': page }) }}">{{ topic.name }}</a></td>
                                    <td>@mdo</td>
                                </tr>
                            {% endfor %}
                        {% endif %}
                    </tbody>
                </table>  
            </div>
        <div class="col-md-2"></div>
    </div>
    <hr class="my-4">
    {{ include('topic/modalcreatetopic.html.twig') }}

{% endblock %}
